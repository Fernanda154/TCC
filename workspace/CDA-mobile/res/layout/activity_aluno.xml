<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/fundo_do_app"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.edu.ifrn.cda.ui.AlunoActivity" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ivAluno"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/ic_aluno" />

            <TextView
                android:id="@+id/tvAluno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aluno(a)"
                android:textSize="20dp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/ibSai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/ic_saida"
            android:onClick="sair"
            android:src="@drawable/ic_saida" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/ibSai"
            android:src="@drawable/ic_notifi" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/ibSai" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/ibMarcar"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/marc"
        android:onClick="marcando" />

    <TextView
        android:id="@+id/tvMarcar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Marcar Refeição"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageButton
        android:id="@+id/imagAcompa"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_acom"
        android:onClick="acompanhar" />

    <TextView
        android:id="@+id/tvAcomp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Acompanhar Refeição"
        android:textAppearance="?android:attr/textAppearanceLarge" />

 <!--     <ImageButton
        android:id="@+id/qr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="-20dp"
         android:onClick="lerCodigo"
        android:background="@drawable/ic_scan" />-->

    <ImageButton
        android:id="@+id/qr"
        android:onClick="lerCodigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_scan" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:text="Scan"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</LinearLayout>